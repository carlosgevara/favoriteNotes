<div class="container mt-5">
    <div class="row">
        {{#each noteList}}
        <div class="col-md-3">
            <div class="card m-2">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">{{ title }} <a href="/note/edit/{{_id}}"><i
                                class="fas fa-edit"></i></a></h4>
                    <p>{{ description }}</p>
                    <a href="/note/delete/{{_id}}" class="btn btn-danger btn-block btn-sm">Delete</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">There are not notes yet.</p>
                <a href="/note/add" class="btn btn-primary btn-block">Create One !!!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>